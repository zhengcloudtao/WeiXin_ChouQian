<!--pages/tools/chouqian/kroom/kroom.wxml-->
<view class="center">房间号:{{rid}}</view>
<view class="center">活动名称:{{qname}}</view>
<view class="center">结果:{{result}}</view>




<view  class="layout_horizontal">
<view wx:for="{{list}}" wx:key="list"  >
<image  class="avatar" src="{{item.avatar}}"></image>
</view>
</view>

<button open-type="share">邀请一起观看</button>


<text>\n</text>
<view class="canvas-container">
   <!-- 外围边框 -->
   <!-- <view class='gb-wheel-run' style=''></view> -->

   <view animation="{{animationData}}" class="gb-wheel-content" style='width:{{size.w}}rpx;height:{{size.h}}rpx;'>
      <!-- 扇形颜色背景 当选项长度等于2或者3时做了特殊处理 -->
      <view class="canvas-list">
         <view class="canvas-item2" wx:for="{{awardsConfig}}" wx:key="key" style="transform: rotate({{item.item2Deg}});background-color:{{awardsConfig.length==2?'#4169E1':''}};opacity:{{awardsConfig.length==2?item.opacity:awardsConfig.length==3?item.opacity:''}};width:{{size.h}}rpx;height:{{size.h/2-2}}rpx;transform-origin:{{size.h/2}}rpx {{size.h/2}}rpx">
            <view class="canvas-item2-after" style="transform: rotate({{item.afterDeg}});background-color:#4169E1;opacity:{{awardsConfig.length==3?'':item.opacity}};width:{{size.h/2}}rpx;height:{{size.h/2}}rpx;transform-origin: {{size.h/2}}rpx {{size.h/2}}rpx"></view>
            <view wx:if='{{awardsConfig.length==3}}' class="canvas-item2-after" style="background-color:#4169E1;width:{{size.h/2}}rpx;height:{{size.h/2}}rpx;transform-origin: {{size.h/2}}rpx {{size.h/2}}rpx"></view>
         </view>
      </view>

      <!-- 分割线 -->
      <view class="gb-wheel-line">
               <view class="gb-wheel-litem" wx:for="{{awardsConfig}}" wx:key='key' data-index="{{index}}" style="transform: rotate({{index*turnNum+turnNum/2}}turn);"></view>
      </view> 

      <!-- 选项内容 -->
      <view class="gb-wheel-list">
         <view class="gb-wheel-item" data-index="{{index}}" wx:for="{{awardsConfig}}" wx:key='key'>
            <view class="gb-wheel-icontent" style="height:262rpx;overflow:hidden;font-size:{{item.name.length>9?'20':'26'}}rpx;line-height:{{item.name.length>9?'20':'26'}}rpx;width:26rpx;padding-top:5rpx;transform: rotate({{index*turnNum}}turn);transform-origin: 50% {{size.h/2-2}}rpx">
               <text style='word-break:break-all;'>{{item.name}}</text>
            </view>
         </view>
      </view>
   </view>

   <!-- 转盘中间的按钮 -->
   <image src='/images/chouqian/chou.png' style='width:150rpx;position:absolute;left:41%;top:38%;margin-top:-11rpx;z-index:9999;display:{{block1}}' mode='widthFix'></image>
   <image src='/images/chouqian/chou.png' style='width:150rpx;position:absolute;left:41%;top:38%;margin-top:-11rpx;z-index:9999;display:{{block2}}' mode='widthFix'></image>
   <image src='/images/chouqian/rec.png' style='width:150rpx;left:41%;top:38%;position: absolute;margin-top:-11rpx;z-index:9999;display:{{block3}}' mode='widthFix'></image>
   <image src='/images/chouqian/rec.png' style='width:150rpx;position:absolute;left:41%;top:38%;margin-top:-11rpx;z-index:9999;display:{{block4}}' mode='widthFix'></image>
</view>